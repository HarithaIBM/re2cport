export ZOPEN_TYPE="GIT"

export ZOPEN_GIT_URL="https://github.com/skvadrik/re2c.git"
export ZOPEN_GIT_BRANCH="3.0"
export ZOPEN_GIT_DEPS="git make m4 autoconf perl libtool automake"

export ZOPEN_BOOTSTRAP="./autogen.sh"

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to guage build health

  totalTests=$(grep '# TOTAL: ' ${chk} | awk ' { print $3; }')
  actualFailures=$(grep '# FAIL: ' ${chk} | awk ' { print $3; }')
  expectedFailures=0

  echo "actualFailures:${actualFailures}"
  echo "expectedFailures:${expectedFailures}"
  echo "totalTests:${totalTests}"
}

zopen_append_to_env()
{
  # echo envars outside of PATH, MANPATH, LIBPATH
}
